<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.rcdukes.app.LabeledValueSlider?>

<GridPane id="root" maxHeight="Infinity" maxWidth="Infinity"
	xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/11.0.1"
	fx:controller="org.rcdukes.app.DukesFxGUI">
	<MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput"
		BorderPane.alignment="CENTER" GridPane.columnIndex="0"
		GridPane.columnSpan="3" GridPane.hgrow="always" GridPane.rowIndex="0">
		<menus>
			<Menu text="File">
				<items>
					<MenuItem onAction="#onOpen" text="Open" />
					<SeparatorMenuItem />
					<MenuItem onAction="#onQuit" text="Quit" />
				</items>
			</Menu>
			<Menu text="Help">
				<items>
					<MenuItem onAction="#onHelp" text="Online Manual" />
					<MenuItem onAction="#onReportIssue" text="Report Issue" />
					<SeparatorMenuItem />
					<MenuItem onAction="#onHelpAbout" text="About" />
				</items>
			</Menu>
		</menus>
	</MenuBar>
	<HBox style="-fx-background-color: #303F9F;"
		GridPane.columnIndex="0" GridPane.columnSpan="3"
		GridPane.hgrow="always" GridPane.rowIndex="1">
		<Button fx:id="homeButton" text="Home"
			ButtonBar.buttonData="LEFT" />
		<Button fx:id="detectButton" text="Detect"
			ButtonBar.buttonData="LEFT" />
		<Button fx:id="githubButton" onAction="#onHelpAbout"
			text="Github" ButtonBar.buttonData="LEFT" />
		<Button fx:id="chatButton" onAction="#onChat" text="Chat"
			ButtonBar.buttonData="LEFT" />
		<Button fx:id="helpButton" onAction="#onHelp" text="Help"
			ButtonBar.buttonData="LEFT" />
		<Button fx:id="fullScreenButton" onAction="#onFullScreen" text="full Screen"
			ButtonBar.buttonData="RIGHT" />
		<Button fx:id="hideMenuButton" onAction="#onHideMenu" text="hide Menu"
			ButtonBar.buttonData="RIGHT" />		
	</HBox>
	<HBox style="-fx-background-color: #3F51B5;"
		GridPane.columnIndex="0" GridPane.columnSpan="3"
		GridPane.hgrow="always" GridPane.rowIndex="2">
		<padding>
			<Insets bottom="4" left="4" right="4" top="4" />
		</padding>
		<Text fill="white" stroke="white"
			text="Self Driving RC Car Desktop Control" />
	</HBox>

	<VBox GridPane.columnIndex="0" GridPane.rowIndex="3">
		<fx:include fx:id="navigation" source="navigation.fxml" />
	</VBox>
	<VBox GridPane.rowIndex="3" GridPane.columnIndex="1"
		GridPane.columnSpan="2">
		<fx:include fx:id="camera" source="camera.fxml" />
	</VBox>
	<VBox GridPane.columnIndex="0" GridPane.rowIndex="4">
		<HBox style="-fx-background-color: #3F51B5;">
			<padding>
				<Insets bottom="4" left="4" right="4" top="4" />
			</padding>
			<Text fill="white" stroke="white" text="Events" />
		</HBox>
		<TextArea fx:id="messageArea" text=""
			GridPane.columnIndex="0" GridPane.hgrow="always"
			GridPane.rowIndex="4" GridPane.vgrow="always" />
	</VBox>

	<BorderPane GridPane.columnIndex="1" GridPane.rowIndex="4"
		GridPane.vgrow="always">
		<top>
			<HBox style="-fx-background-color: #3F51B5;">
				<padding>
					<Insets bottom="4" left="4" right="4" top="4" />
				</padding>
				<Text fill="white" stroke="white" text="Imageview Config" />
			</HBox>
		</top>
		<center>
			<VBox alignment="CENTER_LEFT" spacing="15">
				<padding>
					<Insets bottom="25" left="25" right="25" top="25" />
				</padding>
				<Label text="Camera config" style='-fx-font-weight: bold'/>
				<LabeledValueSlider fx:id="roiy" text="ROI y" blockIncrement="1" max="100" min="0" value="19" format="\%.0f"/>
	            <LabeledValueSlider fx:id="roih" text="ROI h" blockIncrement="1" max="100" min="0" value="100" format="\%.0f"/>
				<GridPane alignment="center" hgap="10" vgap="10">
					<padding>
						<Insets bottom="25" left="25" right="25" top="25" />
					</padding>

					<Text text="Video URLs:" GridPane.columnIndex="0"
						GridPane.columnSpan="2" GridPane.rowIndex="0" />

					<Label text="Lane:" GridPane.columnIndex="0"
						GridPane.rowIndex="1" />

					<ComboBox fx:id="lanevideo" GridPane.columnIndex="1"
						GridPane.rowIndex="1" />

					<Label text="Start:" GridPane.columnIndex="0"
						GridPane.rowIndex="2" />

					<ComboBox fx:id="startvideo" GridPane.columnIndex="1"
						GridPane.rowIndex="2" />


					<columnConstraints>
						<ColumnConstraints />
						<ColumnConstraints minWidth="-Infinity"
							prefWidth="360.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints />
						<RowConstraints />
						<RowConstraints />
					</rowConstraints>
				</GridPane>
				<Button fx:id="cameraButton" alignment="center"
					onAction="#startCamera" text="Start camera" />

				<Label fx:id="currentValues" />
			</VBox>
		</center>
	</BorderPane>
	<BorderPane GridPane.columnIndex="2" GridPane.rowIndex="4">
		<top>
			<HBox style="-fx-background-color: #3F51B5;">
				<padding>
					<Insets bottom="4" left="4" right="4" top="4" />
				</padding>
				<Text fill="white" stroke="white" text="Detection Config" />
			</HBox>
		</top>
		<center>
			<TabPane fx:id="tabPane"
				xmlns="http://javafx.com/javafx/8.0.40"
				xmlns:fx="http://www.w3.org/2001/XInclude">
				<tabs>
					<Tab fx:id="laneTab" text="Lane">
						<fx:include fx:id="laneDetection"
							source="lanedetection.fxml" />
					</Tab>
					<Tab fx:id="startTab" text="Start">
						<fx:include fx:id="startDetection"
							source="startlightdetection.fxml" />
					</Tab>
				</tabs>
			</TabPane>
		</center>
	</BorderPane>
	<columnConstraints>
		<ColumnConstraints prefWidth="480.0" />
		<ColumnConstraints prefWidth="640.0"/>
		<ColumnConstraints prefWidth="640.0"/>
	</columnConstraints>
	<rowConstraints>
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
	</rowConstraints>
</GridPane>
